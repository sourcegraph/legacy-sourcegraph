{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: build",
			"type": "shell",
			"command": "node_modules/.bin/tsc",
			"args": ["--build", "--watch"],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": { "runOn": "folderOpen" }
		}
	]
}
